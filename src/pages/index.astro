---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
import Link from '../components/Link.astro'
import YouTubeBackground from '../components/YouTubeBackground.astro';
---

<Layout title="blaz.">
  <main>
    <CanvasContainer />
    <Link class="link" href="https://github.com/BlazPocrnja/astro-art-portfolio" target="_blank" rel="noopener noreferrer">Github</Link>
    <YouTubeBackground />
  </main>
</Layout>

<style lang="scss">
  main {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .link {
    position: absolute;
    bottom: 1rem;
    right: 2rem;
  }
</style>
